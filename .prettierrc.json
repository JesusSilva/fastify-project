{
  "tabWidth": 2,
  "printWidth": 90,
  "trailingComma": "all",
  "endOfLine": "auto",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "**/*.hbs"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ]
}